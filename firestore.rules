rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/userRoles/$(request.auth.uid)).data.role;
    }
    
    function isSeller() {
      return isAuthenticated() && getUserRole() == 'seller';
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    function isBuyer() {
      return isAuthenticated() && getUserRole() == 'buyer';
    }
    
    match /userRoles/{userId} {
      allow read: if isOwner(userId);
      allow write: if false;
    }
    
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /sellers/{sellerId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(resource.data.userId);
      allow update: if isSeller() && isOwner(resource.data.userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    match /products/{productId} {
      allow read: if true;
      allow create: if isSeller() && isOwner(resource.data.sellerId);
      allow update: if isSeller() && isOwner(resource.data.sellerId) || isAdmin();
      allow delete: if isSeller() && isOwner(resource.data.sellerId) || isAdmin();
    }
    
    match /orders/{orderId} {
      allow read: if isAuthenticated() && (
        isOwner(resource.data.buyerId) ||
        isSeller() && resource.data.items[0].sellerId == request.auth.uid ||
        isAdmin()
      );
      allow create: if isBuyer() && isOwner(request.resource.data.buyerId);
      allow update: if isSeller() && resource.data.items[0].sellerId == request.auth.uid ||
                     isAdmin() ||
                     isBuyer() && isOwner(resource.data.buyerId) && 
                     request.resource.data.orderStatus == 'cancelled' &&
                     resource.data.orderStatus == 'pending';
    }
    
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isBuyer() && isOwner(request.resource.data.buyerId);
      allow update: if isBuyer() && isOwner(resource.data.buyerId) ||
                      isSeller() && 
                      exists(/databases/$(database)/documents/products/$(resource.data.productId)) &&
                      get(/databases/$(database)/documents/products/$(resource.data.productId)).data.sellerId == request.auth.uid ||
                      isAdmin();
      allow delete: if isBuyer() && isOwner(resource.data.buyerId) || isAdmin();
    }
    
    match /wishlists/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    match /carts/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
  }
}

